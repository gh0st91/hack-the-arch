<% if @brackets %>
	<%= content_tag :table, id: 'brackets', class: 'table' do %>
		<%= content_tag :thead do %>
			<%= content_tag :tr do %>
				<%= content_tag :td, 'Name' %>
				<%= content_tag :td, 'Priority' %>
				<%= content_tag :td, 'Options' %>
			<% end %>
		<% end %>
		<%= content_tag :tbody do %>
			<% for bracket in @brackets do %>
				<%= content_tag :tr do %>
					<%= content_tag :td, bracket.name %>
					<%= content_tag :td, bracket.priority %>
					<%= content_tag :td do %>
						<%= link_to edit_bracket_path(bracket.id), class: 'btn btn-primary',
                  form: {style: 'display:inline-block;'} do %>
              <span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>
            <% end %>
						<%= link_to remove_bracket_path(id: bracket),  method: :delete, class: 'btn btn-danger',
                  data: { confirm: 'Are you sure?' }, 
                  form: {style: 'display:inline-block;'} do %>
              <span class='glyphicon glyphicon-trash' aria-hidden='true'></span>
            <% end %>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
<%= link_to 'Create', new_bracket_path, class: 'btn btn-primary' %>

